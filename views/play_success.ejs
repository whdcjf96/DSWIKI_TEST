    <script>
        $(document).ready(function(){
            $('#sort_form').hide()
            $('#play_form').hide()
            $('#tip_form').hide()
           
           $('#sort_edtbtn').on('click',function(){
               $('#sort_form').show()
               $('#sort_edtbtn').hide()
           })
           $('#play_edtbtn').on('click',function(){
               $('#play_form').show()
               $('#play_edtbtn').hide()
           })
           $('#tip_edtbtn').on('click',function(){
               $('#tip_form').show()
               $('#tip_edtbtn').hide()
           })

           
           $('#sort_sub').on('click',function(){
               $('#sort_edtbtn').show()
               $('#sort_form').hide()
           })
           $('#play_sub').on('click',function(){
               $('#play_edtbtn').show()
               $('#play_form').hide()
           })
           $('#tip_sub').on('click',function(){
               $('#tip_edtbtn').show()
               $('#tip_form').hide()
           })
        })
    </script>
    
</head>
