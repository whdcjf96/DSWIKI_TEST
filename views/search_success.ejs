<!DOCTYPE html>
<html lang="ko"><head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style>
   
    </style>
    <link href="/stylesheets/search_success_style.css" rel="stylesheet" type="text/css">   
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#intro_form').hide()
            $('#img_form').hide()
            $('#talk_form').hide()
           
           $('#intro_edtbtn').on('click',function(){
               $('#intro_form').show()
               $('#intro_edtbtn').hide()
           })
           $('#img_edtbtn').on('click',function(){
               $('#img_form').show()
               $('#img_edtbtn').hide()
           })
           $('#talk_edtbtn').on('click',function(){
               $('#talk_form').show()
               $('#talk_edtbtn').hide()
           })

           
           $('#intro_sub').on('click',function(){
               $('#intro_edtbtn').show()
               $('#intro_form').hide()
           })
           $('#img_sub').on('click',function(){
               $('#img_edtbtn').show()
               $('#img_form').hide()
           })
           $('#talk_sub').on('click',function(){
               $('#talk_edtbtn').show()
               $('#talk_form').hide()
           })
        })
    </script>
    
</head>
<body>
 <nav class="topMenu" >
        <ul class = 'navbar'>
                <li>
                    <a class="logo" href="/">
                        <img src="/images/logo.png" class='dsu' width = "120" height="60" align="center" />
                    </a>
                </li>
        </ul>
        <div class="input-form">
                <form action ='/result' method="POST">
                        <input type="search" name="text" placeholder="검색하시오" class = 'search'/>
                            <button type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                </form>
        </div>                              
    </nav>
